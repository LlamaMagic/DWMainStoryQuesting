<!DOCTYPE Profile [
<!-- Profile Settings -->
<!ENTITY openchest "0">
]>

<Profile>
  <Name>Akh Afah Amphitheatre (Hard)</Name>
  <BehaviorDirectory></BehaviorDirectory>
  <Order>
	<If condition="DutyManager.InInstance">
		<MoveTo XYZ="-2.505933, 0, -1.998298" usemesh="false"/> <!-- Move to center -->
		<Grind GrindRef="Shiva" While="not GameObjectManager.GetObjectByNPCId(2994).CurrentHealth == 0"/> <!-- Kill Shiva -->
		<If Condition="&openchest; == 1">
			<LLOpenChest />
		</If>
		<While condition="DutyManager.InInstance">	
			<WaitTimer WaitTime="10" />
			<LLLeaveDuty/>
		</While>
	</If>

	
 </Order>
  <GrindAreas>
	<GrindArea name="Shiva">
        <Hotspots>
			<Hotspot Radius="200" XYZ="-2.505933, 0, -1.998298" />
        </Hotspots>
        <TargetMobs>
			<TargetMob Name="Shiva" Id="2994" Weight="1" />
			<TargetMob Name="Ice Soldier" Id="2995" Weight="2" />
        </TargetMobs>
	</GrindArea>
  </GrindAreas>		
  <CodeChunks>
  </CodeChunks>  
</Profile>    