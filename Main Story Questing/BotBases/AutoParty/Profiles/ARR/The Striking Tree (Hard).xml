<!DOCTYPE Profile [
<!-- Profile Settings -->
<!ENTITY openchest "0">
]>

<Profile>
  <Name>The Striking Tree (Hard)</Name>
  <BehaviorDirectory></BehaviorDirectory>
  <Order>
	<If condition="DutyManager.InInstance">
		<MoveTo XYZ="4.951025, 75, 3.833662" usemesh="false"/> <!-- Move to center -->
		<Grind GrindRef="Ramuh" While="not GameObjectManager.GetObjectByNPCId(2832).CurrentHealth == 0"/> <!-- Kill Ramuh -->
		<If Condition="&openchest; == 1">
			<LLOpenChest />
		</If>
		<While condition="DutyManager.InInstance">	
			<WaitTimer WaitTime="10" />
			<LLLeaveDuty/>
		</While>
	</If>

	
 </Order>
  <GrindAreas>
	<GrindArea name="Ramuh">
        <Hotspots>
			<Hotspot Radius="200" XYZ="4.951025, 75, 3.833662" />
        </Hotspots>
        <TargetMobs>
			<TargetMob Name="Ramuh" Id="2832" Weight="1" />
			<TargetMob Name="Grey Arbiter" Id="2833" Weight="2" />
        </TargetMobs>
	</GrindArea>
  </GrindAreas>		
  <CodeChunks>
  </CodeChunks>  
</Profile>    