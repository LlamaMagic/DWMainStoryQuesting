<!DOCTYPE Profile [
<!-- Profile Settings -->
<!ENTITY openchest "0">
]>

<Profile>
  <Name>The Navel</Name>
  <BehaviorDirectory></BehaviorDirectory>
  <Order>
	
	<If condition="not DutyManager.InInstance">
		<LLJoinDuty DutyId="243" Undersized="True"/>
	</If>	
	
	<If condition="DutyManager.InInstance">
		<Grind GrindRef="Susano" While="not IsDutyEnded()"/> <!-- Kill Titan -->
		<While condition="DutyManager.InInstance and IsDutyEnded()">	
			<WaitTimer WaitTime="10" />
			<LLLeaveDuty/>
		</While>
	</If>

	
 </Order>
  <GrindAreas>
    <GrindArea name="Susano">
      <Hotspots>
        <Hotspot Radius="90" XYZ="-0.03009045, -0.1157791, 15.19387" name="Name"/>
      </Hotspots>
      <TargetMobs>
        <TargetMob Id="6221" Weight="1"/> <!-- Susano -->
      </TargetMobs>
    </GrindArea>
  </GrindAreas>		
  <CodeChunks>
  </CodeChunks>  
</Profile>    