      </TargetMobs>
    </GrindArea>
    <GrindArea name="ClearToLanding">
      <Hotspots>
        <Hotspot Radius="90" XYZ="232.9767, 20, -95.71293" name="Name"/>
        <Hotspot Radius="90" XYZ="289.1483, 14.89527, -107.9544" name="Name"/>
        <Hotspot Radius="90" XYZ="368.6578, 4.999999, -137.9256" name="Name"/>
        <Hotspot Radius="90" XYZ="370.0475, 13.60863, -231.9377" name="Name"/>				
      </Hotspots>
      <TargetMobs>
        <TargetMob Id="7872" Weight="1"/> <!-- Schola Laquearius -->
        <TargetMob Id="7874" Weight="1"/> <!-- Schola Eques -->
        <TargetMob Id="7871" Weight="1"/> <!-- Schola Centurion -->
        <TargetMob Id="7880" Weight="1"/> <!-- Schola Avenger -->
        <TargetMob Id="7879" Weight="1"/> <!-- Schola Predator -->
        <TargetMob Id="7874" Weight="1"/> <!-- Schola Eques -->
        <TargetMob Id="7872" Weight="1"/> <!-- Schola Laquearius -->
        <TargetMob Id="7871" Weight="1"/> <!-- Schola Centurion -->
        <TargetMob Id="7874" Weight="1"/> <!-- Schola Eques -->
        <TargetMob Id="7873" Weight="1"/> <!-- Schola Secutor -->
        <TargetMob Id="7886" Weight="1"/> <!-- Schola Colossus -->
        <TargetMob Id="7881" Weight="1"/> <!-- Schola Hexadrone -->		
        <TargetMob Id="7888" Weight="1"/> <!-- Schola Mark II Colossus -->
        <TargetMob Id="7887" Weight="1"/> <!-- Schola Colossus Rubricatus -->				
      </TargetMobs>
    </GrindArea>		
    <GrindArea name="FinalBoss">
      <Hotspots>
        <Hotspot Radius="90" XYZ="370,-15,-267.0998" name="Name"/>
      </Hotspots>
      <TargetMobs>
        <TargetMob Id="7858" Weight="1"/> <!-- Annia quo Soranus -->
        <TargetMob Id="7857" Weight="1"/> <!-- Julia quo Soranus -->
      </TargetMobs>
    </GrindArea>	
  </GrindAreas>
  <CodeChunks>
